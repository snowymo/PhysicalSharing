using UnityEngine;
using System.Collections;

public class MatchStart : MonoBehaviour {

	public GameObject trackedBall;

	// Use this for initialization
	void Start () {
		//GameObject.Find ("sphere");
	}
	
	// Update is called once per frame
	void Update () {
		if (checkMatchStart ()) {
			this.enabled = false;
			this.gameObject.SetActive (false);
			trackedBall.GetComponent<TrackedObject> ().isReadToMove = true;
		}
	}

	bool checkMatchStart(){
		// check if tracked ball is very close to start ball
		print((this.transform.position - trackedBall.transform.position).magnitude);
		if ((this.transform.position - trackedBall.transform.position).magnitude < 0.03)
			return true;
		else
			return false;
	}
}
